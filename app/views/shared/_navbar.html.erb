<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <div class="left">
    <%= link_to root_path, class: "navbar-brand" do %>
      <div class="logo">
        <%= image_tag("grandmother.png") %>
        <h1>Tata Monique</h1>
      </div>
    <% end %>
  </div>



  <div class="right">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <ul class="navbar-nav mr-auto">
      <div class="general">
        <li class="nav-item active">
          <%= link_to "Ma to do", tasks_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Mes docs", documents_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Mes messages", "#", class: "nav-link" %>
        </li>

      </div>
    </ul>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <% if user_signed_in? %>
          <div class="dropdown">
            <ul class="navbar-nav">
              <li class="nav-item dropdown">
                <%= image_tag "https://res.cloudinary.com/dyyx7p742/image/upload/w_1000,c_fill,ar_1:1,g_auto,r_max,b_rgb:262c35/v1599051132/photo-1534215754734-18e55d13e346_dvdmwl.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                  <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                </div>
               </li>
              <% else %>
            <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>

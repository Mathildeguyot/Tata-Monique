<div class="container">
  <div class="row">
    <div class="col">
      <%= simple_form_for(@document) do |f| %>
        <%= f.input :category, collection: Document::CATEGORIES, required: true%>
        <%= f.input :name, required: true %>
        <%= f.input :photo, as: :file, required: true %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


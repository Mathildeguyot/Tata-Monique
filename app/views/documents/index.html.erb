<div class="container">

  <div class="docs">

    <div class="docleft">
      <div class="row">
        <div class="col-3 ">
          <div class="category-casa">
          <%= link_to "La casa", documents_path(category: "La casa"), class: "category-link"%>
          <i class ="fas fa-home"></i>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-3 ">
          <div class="category-mif">
          <%= link_to "La mif", documents_path(category: "La mif"), class: "category-link"%>
          <i class ="fas fa-heart"></i>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-3 ">
          <div class="category-santé">
          <%= link_to "La santé", documents_path(category: "La santé"), class: "category-link"%>
          <i class ="fas fa-file-medical-alt"></i>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-3 ">
          <div class="category-boulot">
          <%= link_to "Le boulot", documents_path(category: "Le boulot"), class: "category-link"%>
          <i class ="fas fa-briefcase"></i>
          </div>
        </div>
      </div>
    </div>



    <div class="docright">
      <div class="row">
        <div class="col">
          <h1>Tous les documents</h1>
          <ul>
            <% @documents.each do |document| %>
              <%=link_to document.name, document_path(document), class: "doc-link" %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
